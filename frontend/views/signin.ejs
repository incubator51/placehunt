<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Place Hunt</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <nav class="bg-white shadow-md fixed w-full top-0 z-10">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="logo">
                    <a href="/" class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 40" width="150">
                            <path d="M20 35h20v-15l-10-10-10 10z" fill="#FF385C"/>
                            <text x="50" y="28" font-family="sans-serif" font-size="24" font-weight="bold" fill="#FF385C">Place Hunt</text>
                            <circle cx="30" cy="25" r="2" fill="white"/>
                            <path d="M30 25l-3 5" stroke="white" stroke-width="1.5"/>
                        </svg>
                    </a>
                </div>
                <div class="hidden md:flex space-x-4">
                    <a href="/" class="text-gray-700 font-medium text-base hover:text-[#FF385C] transition duration-300">Home</a>
                    <a href="/about" class="text-gray-700 font-medium text-base hover:text-[#FF385C] transition duration-300">About</a>
                    <a href="/support" class="text-gray-700 font-medium text-base hover:text-[#FF385C] transition duration-300">Support</a>
                    <a href="/signup" class="text-[#FF385C] font-medium text-base hover:text-[#FF385C] transition duration-300">Sign Up</a>
                </div>
                <div class="md:hidden">
                    <button id="menu-toggle" class="text-gray-700 focus:outline-none">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div>
            </div>
            <div id="mobile-menu" class="hidden md:hidden bg-white">
                <div class="flex flex-col space-y-2 py-4 px-4">
                    <a href="/" class="text-gray-700 font-medium text-base hover:text-[#FF385C] transition duration-300">Home</a>
                    <a href="/about" class="text-gray-700 font-medium text-base hover:text-[#FF385C] transition duration-300">About</a>
                    <a href="/contact" class="text-gray-700 font-medium text-base hover:text-[#FF385C] transition duration-300">Contact</a>
                    <a href="/signup" class="text-[#FF385C] font-medium text-base hover:text-[#FF385C] transition duration-300">Sign Up</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="min-h-screen pt-20 flex items-center justify-center px-4 sm:px-6 lg:px-8 bg-gray-100">
        <form class="bg-white p-6 sm:p-8 rounded-2xl shadow-lg w-full max-w-md" id="loginForm">
            <div class="text-center mb-6">
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">Welcome Back</h1>
                <p class="text-gray-600">Sign in to your account</p>
            </div>

            <div class="mb-4">
                <label for="email" class="block text-gray-700 font-medium mb-2">Email Address</label>
                <input type="email" id="email" name="email" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-pink-500 transition duration-300" required>
                <div class="error-message text-red-500 text-sm mt-1 hidden">Please enter a valid email address</div>
            </div>

            <div class="mb-4">
                <label for="password" class="block text-gray-700 font-medium mb-2">Password</label>
                <input type="password" id="password" name="password" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-pink-500 transition duration-300" required>
                <div class="error-message text-red-500 text-sm mt-1 hidden">Please enter your password</div>
            </div>

            <div class="flex justify-between items-center mb-6">
                <label class="flex items-center text-gray-600">
                    <input type="checkbox" name="remember" class="mr-2">
                    Remember me
                </label>
                <a href="/forgot-password" class="text-[#FF385C] text-sm hover:underline">Forgot password?</a>
            </div>

            <button type="submit" class="w-full bg-[#FF385C] text-white p-3 rounded-full font-medium">Sign In</button>

            <div class="my-6 text-center relative">
                <p class="text-gray-600 relative z-10 bg-white px-4 inline-block">Or continue with</p>
                <div class="absolute top-1/2 left-0 w-full h-px bg-gray-300"></div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button type="button" class="flex items-center justify-center gap-2 p-3 border border-gray-300 rounded-full bg-white hover:bg-gray-100 transition duration-300 w-full">
                    <i class="fab fa-google"></i>
                    Google
                </button>
                <button type="button" class="flex items-center justify-center gap-2 p-3 border border-gray-300 rounded-full bg-white hover:bg-gray-100 transition duration-300 w-full">
                    <i class="fab fa-facebook-f"></i>
                    Facebook
                </button>
            </div>

            <div class="text-center mt-6 text-gray-600">
                Don't have an account? <a href="/signup" class="text-[#FF385C] hover:underline">Sign up</a>
            </div>
        </form>
    </div>

    <script>
        // Toggle mobile menu
        document.getElementById('menu-toggle').addEventListener('click', function() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        });

        // Form validation
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Reset previous errors
            document.querySelectorAll('.form-group').forEach(group => {
                group.classList.remove('has-error');
                group.querySelector('.error-message').classList.add('hidden');
            });
            
            let hasError = false;
            const errors = {};

            // Validate email
            const email = document.getElementById('email').value.trim();
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                errors.email = true;
                hasError = true;
                document.getElementById('email').parentElement.querySelector('.error-message').classList.remove('hidden');
            }

            // Validate password
            const password = document.getElementById('password').value;
            if (password.length < 1) {
                errors.password = true;
                hasError = true;
                document.getElementById('password').parentElement.querySelector('.error-message').classList.remove('hidden');
            }

            // Show errors if any
            if (hasError) {
                for (const field in errors) {
                    if (errors[field]) {
                        document.getElementById(field).parentElement.classList.add('has-error');
                    }
                }
                return;
            }

            // Here you would typically send the data to your server
            console.log('Login attempt', {
                email,
                password,
                remember: document.querySelector('input[name="remember"]').checked
            });
        });
    </script>
</body>
</html>